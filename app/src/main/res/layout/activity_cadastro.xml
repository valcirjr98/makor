<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CadastroActivity">

    <TextView
        android:id="@+id/textViewCrieSuaContaGratis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:text="Crie sua conta grÃ¡tis"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textCapWords"
        android:hint="Nome"
        android:drawableLeft="@drawable/ic_pessoa_cinza_24dp"/>

    <EditText
        android:id="@+id/editTextEmail2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textEmailAddress"
        android:hint="E-mail"
        android:drawableLeft="@drawable/ic_email_cinza_24dp"/>

    <EditText
        android:id="@+id/editTextSenha2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_gravity="center_horizontal"
        android:inputType="textPassword"
        android:hint="Senha"
        android:drawableLeft="@drawable/ic_cadeado_cinza_24dp"/>

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Cadastrar"
        android:layout_gravity="center_horizontal"/>

    <ProgressBar
        android:id="@+id/progressBarCadastro"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>